@using Library.ViewModel
@model List<BookViewModel>

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>搜尋結果</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="book-body">

    <div class="container mt-5">
        <div class="search-container p-4 bg-white shadow rounded">
            <h2 class="mb-4">🔍 搜尋結果</h2>

            @if (Model.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>書名</th>
                            <th>作者</th>
                            <th>出版年份</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Detail", "Book", new { id = book.Id })" class="text-primary fw-bold">
                                        @book.Title
                                    </a>
                                </td>
                                <td>@book.Author</td>
                                <td>@book.PublishedYear</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center text-muted">❌ 沒有找到符合條件的書籍</p>
            }
           @*  @{
                string homeUrl = User.IsInRole("Admin")
                ? Url.Action("Index", "Admin") ?? "#"
                : Url.Action("Index", "User") ?? "#";

            } *@
            <div class="mt-4 d-flex justify-content-center gap-3">
@*                 <a href="/Book/Index" class="btn btn-primary">返回</a>
 *@                <a href="@Url.Action("Index", "Book")" class="btn btn-outline-primary">
                    🔙 返回書籍列表
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>