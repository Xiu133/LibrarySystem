@model Library.Models.Book;
@{
	ViewData["Title"] = "新增書籍";
}
<div class="book-body">
    <div class="book-container">
        <h2>新增書籍</h2>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>ID</label>
                <input type="text" class="form-control" value="@ViewBag.NewBookId" readonly />
            </div>

            <div class="form-group">
                <label for="Title">書名</label>
                <input asp-for="Title" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="Author">作者</label>
                <input asp-for="Author" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="Description">簡短描述</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group">
                <label for="PublishedYear">出版年份</label>
                <input asp-for="PublishedYear" type="number" class="form-control" required />
            </div>

            <div class="form-group mb-4">
                <label for="Quantity">數量</label>
                <input asp-for="Quantity" type="number" class="form-control" required />
            </div>

            <div class="form-group mb-4">
                <label for="ImageFile">上傳封面圖片</label>
                <input type="file" name="ImageFile" class="form-control-file" accept="image/*" required />
            </div>

            <div class="text-center mt-5">
                <button type="submit" class="btn btn-success">新增書籍</button>
            </div>
        </form>

        <div class="mt-4 d-flex justify-content-center gap-3">
            <a href="/Book/Manage" class="btn btn-primary">返回</a>
        </div>
    </div>
</div>


