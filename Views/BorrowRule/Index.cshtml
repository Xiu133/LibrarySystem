@model Library.ViewModel.BorrowRuleViewModel

@{
    ViewData["Title"] = "借閱權限設定";
}

<div class="overlay"></div>


<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-gear-fill"></i> 借閱權限設定</h3>
        </div>
        <div class="card-body bg-light">
            <form asp-action="SavePermisson" method="post">
                <div class="mb-3">
                    <label asp-for="Role" class="form-label fw-bold"><i class="bi bi-person-badge"></i> 請選擇身分：</label>
                    <select asp-for="Role" class="form-select" asp-items="Model.RoleList">
                        <option value="">-- 請選擇 --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="MaxBooks" class="form-label fw-bold"><i class="bi bi-journal-bookmark-fill"></i> 可借書本數量：</label>
                    <input asp-for="MaxBooks" class="form-control" type="number" min="1" />
                </div>

                <button type="submit" class="btn btn-success w-100 fw-bold">
                    <i class="bi bi-save-fill"></i> 儲存設定
                </button>             
            </form>
        </div>
    </div>
</div>
