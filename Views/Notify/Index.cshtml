@model List<Notify>

@{
    ViewData["Title"] = "系統通知";
}
<div class="overlay"></div>

<link href="~/css/Notify.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body">
            <h2 class="card-title mb-4"><i class="bi bi-megaphone-fill me-2"></i>📢 系統通知</h2>
            <ul class="list-group list-group-flush">
                @foreach (var n in Model)
                {
                    <li class="list-group-item notification-item @(n.IsRead ? "" : "unread")">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>@n.Message</span>
                            <small class="text-muted">@n.CreatedAt.ToString("g")</small>
                        </div>
                    </li>
                }
            </ul>
            <div class="text-center mt-3">
                <a href="/User/Index" class="btn btn-primary">🏠 返回首頁</a>
            </div>
        </div>
    </div>
</div>
